<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>HULKSTORE_WEB</display-name>
  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>403</error-code>
    <location>/Logueo/error-403.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/Logueo/error-404.jsp</location>
  </error-page>
  <security-constraint>
    <display-name>seguridad_hulkstore</display-name>
    <web-resource-collection>
      <web-resource-name>web-resource-collection</web-resource-name>
      <url-pattern>/view/*</url-pattern>
      <url-pattern>/servlet/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <http-method>PUT</http-method>
      <http-method>DELETE</http-method>
      <http-method>HEAD</http-method>
      <http-method>TRACE</http-method>
      <http-method>OPTIONS</http-method>
    </web-resource-collection>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/Logueo/login.jsp</form-login-page>
      <form-error-page>/Logueo/login_error.jsp</form-error-page>
    </form-login-config>
  </login-config>
</web-app>